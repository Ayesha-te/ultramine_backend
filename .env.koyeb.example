# Koyeb Environment Variables Template
# Copy and fill in these values in your Koyeb project settings

# ===============================================
# Django Settings
# ===============================================
DEBUG=False
SECRET_KEY=your_very_long_and_random_secret_key_here
ALLOWED_HOSTS=your-app.koyeb.app,yourdomain.com

# ===============================================
# Database Configuration (PostgreSQL on Neon)
# ===============================================
DATABASE_URL=postgresql://user:password@host/dbname
# OR individual settings:
DATABASE_ENGINE=django.db.backends.postgresql
DATABASE_NAME=neondb
DATABASE_USER=neondb_owner
DATABASE_PASSWORD=your_password
DATABASE_HOST=your_neon_host.neon.tech
DATABASE_PORT=5432

# ===============================================
# S3 / Media Storage (REQUIRED FOR KOYEB)
# ===============================================
USE_S3=True
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_STORAGE_BUCKET_NAME=ultamine-media
AWS_S3_REGION_NAME=us-east-1

# ===============================================
# Email Configuration (Optional)
# ===============================================
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password

# ===============================================
# Site Configuration
# ===============================================
SITE_URL=https://your-app.koyeb.app

# ===============================================
# CORS & Security
# ===============================================
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,https://your-app.koyeb.app

# ===============================================
# Celery / Redis (Optional, if using tasks)
# ===============================================
REDIS_URL=redis://user:password@host:port

# ===============================================
# Additional Settings
# ===============================================
# Add any other environment variables your app needs
